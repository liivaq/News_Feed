<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Article</title>
</head>
<body>
<!-- Container for demo purpose -->
<div class="container my-24 px-6 mx-auto">

    <!-- Section: Design Block -->
    <section class="mb-32 text-gray-800">
        <div class="block rounded-lg shadow-lg bg-white">
            <div class="flex flex-wrap items-center">
                <div class="hidden lg:flex grow-0 shrink-0 basis-auto lg:w-6/12 xl:w-4/12">
                    <img src="https://placehold.co/600x400" alt="Trendy Pants and Shoes"
                         class="w-full rounded-t-lg lg:rounded-tr-none lg:rounded-bl-lg" />
                </div>
                <div class="grow-0 shrink-0 basis-auto w-full lg:w-6/12 xl:w-8/12">
                    <div class="px-6 py-12 md:px-12">
                        <h2 class="text-2xl font-bold mb-4">article.title</h2>
                        <p class="uppercase text-red-600 font-bold mb-6 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" class="w-4 h-4 mr-2">
                                <!-- Font Awesome Pro 5.15.4 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) -->
                                <path fill="currentColor"
                                      d="M216 23.86c0-23.8-30.65-32.77-44.15-13.04C48 191.85 224 200 224 288c0 35.63-29.11 64.46-64.85 63.99-35.17-.45-63.15-29.77-63.15-64.94v-85.51c0-21.7-26.47-32.23-41.43-16.5C27.8 213.16 0 261.33 0 320c0 105.87 86.13 192 192 192s192-86.13 192-192c0-170.29-168-193-168-296.14z" />
                            </svg>Hot news
                        </p>
                        <p class="text-gray-500 mb-6">
                            {{article.body}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->
    <section class="mb-32 text-gray-800">
        <h5 class="text-xl font-semibold text-center mb-10 md:mb-6">Comments: {{ comments|length }}</h5>

        <!-- Comment -->
        {% for comment in comments %}
        <div class="flex flex-wrap mb-12 md:mb-0 mt-3">
            <div class="grow-0 shrink-0 basis-auto ">
                <img src="https://placehold.co/50x50" class="w-full shadow-lg rounded-lg mb-6"
                     alt="" />
            </div>

            <div class="grow-0 shrink-0 basis-auto w-10/12 pl-4 md:pl-6 mt-3">
                <p class="font-semibold mb-3">{{ comment.name }}</p>
                <p>
                    {{comment.body}}
                </p>
            </div>
        </div>
        {% endfor %}

    </section>

</div>
<!-- Container for demo purpose -->

</body>
</html>